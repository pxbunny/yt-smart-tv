{
  "name": "YouTube Smart TV",
  "version": "0.1.0",
  "homepage_url": "https://github.com/dae-ne/yt-smart-tv",
  "permissions": ["declarativeNetRequest", "tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {},
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "exclude_matches": ["https://*.youtube.com/tv*"],
      "js": ["yt-smart-tv.js"],
      "css": ["yt-smart-tv.css"],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 3
}
