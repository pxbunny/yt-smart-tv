{
  "name": "yt-smart-tv",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "lint-staged": "lint-staged",
    "format": "prettier **/*.ts --write",
    "build:background": "node esbuild/build-background.mjs",
    "build:content-script": "node esbuild/build-content-script.mjs",
    "build:copy-manifest": "copyfiles -f ./src/manifest.json ./dist",
    "build:copy-icons": "copyfiles -f ./assets/icon* ./dist/assets",
    "dev:prepare": "run-s clean build:copy-manifest build:copy-icons",
    "dev:background": "node esbuild/build-background.mjs --watch",
    "dev:content-script": "node esbuild/build-content-script.mjs --watch",
    "dev": "npm run dev:prepare && run-p dev:background dev:content-script",
    "build": "npm run clean && run-p build:*",
    "clean": "rimraf dist",
    "prepare": "git config core.hooksPath .githooks"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "dependencies": {
    "svelte": "5.45.3"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@tsconfig/svelte": "5.0.6",
    "@types/chrome": "0.1.32",
    "@types/node": "24.10.1",
    "copyfiles": "2.4.1",
    "esbuild": "0.27.0",
    "esbuild-svelte": "0.9.3",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "lint-staged": "16.2.7",
    "npm-run-all": "4.1.5",
    "prettier": "3.7.3",
    "rimraf": "6.1.2",
    "sass": "1.96.0",
    "svelte-preprocess": "6.0.3",
    "typescript-eslint": "8.48.1"
  }
}
