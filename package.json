{
  "name": "yt-smart-tv",
  "scripts": {
    "dev:chrome": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "run-p build:*",
    "build:chrome": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "run-p zip:*",
    "zip:chrome": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "clean": "wxt clean",
    "test": "vitest run tests",
    "lint-staged": "lint-staged",
    "lint": "eslint . --ext .ts",
    "format": "prettier **/*.ts --write",
    "typecheck": "wxt prepare && tsc -p .wxt/tsconfig.json",
    "postinstall": "wxt prepare && git config core.hooksPath .githooks"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@tsconfig/svelte": "5.0.6",
    "@wxt-dev/module-svelte": "2.0.4",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "lint-staged": "16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "3.7.4",
    "sass": "^1.97.0",
    "svelte": "5.46.0",
    "typescript-eslint": "8.50.0",
    "vitest": "4.0.16",
    "wxt": "0.20.13"
  }
}
